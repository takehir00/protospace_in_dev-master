.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date
      %ul.proto-tag-list.list-inline
        -prototype.tags.each do |tag|
          %li
            %a.btn.btn-default{ href:"/tags/#{tag.id}"}#{tag.name}
      .proto-likes
        -if prototype.likes.present?
          %p #{prototype.likes_count} likes
        -else
          %p 0 likes
